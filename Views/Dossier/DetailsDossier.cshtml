        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Donateur.Personne.Sexe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poids)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poids)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pouls)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pouls)
