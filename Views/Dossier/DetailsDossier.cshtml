        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Donateur.Personne.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Donateur.Personne.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Donateur.Personne.Prenom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Donateur.Personne.Prenom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Donateur.Personne.DateNaissance)
        </dt>
        <dd class="col-sm-10">
