            @Html.DisplayNameFor(model => model.CreeLe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreeLe)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ModifierDossier" class="btn btn-danger" asp-route-id="@Model?.Id">Modifier</a>
    <a asp-action="Index" class="btn btn-info">Dossiers</a>
</div>
