@model BlooDyWeb.Models.Stock.Composante

@{
    ViewData["Title"] = "Modifier Composante";
}

<h1>Modifier Composante</h1>

@* <h4>ExamenMedical</h4> *@
<hr />
<form asp-action="ModifierComposante">
    <div class="container">
        <div class="row text-center">
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="row">
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <label asp-for="DonId" class="control-label"></label>
                    <select asp-for="DonId" class="form-control" asp-items="ViewBag.DonList">
                        <option>--Selectionnez le Code du Donateur--</option>
                    </select>
                    <span asp-validation-for="DonId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="TypeComposanteId" class="control-label"></label>
                    <select asp-for="TypeComposanteId" class="form-control" asp-items="ViewBag.TypeComposanteList">
                        <option>--Selectionnez le Code de la Collecte--</option>
                    </select>
                    <span asp-validation-for="TypeComposanteId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" type="number" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-6 pb-4">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Statut" /> @Html.DisplayNameFor(model => model.Statut)
                    </label>
                </div>
            </div>
            <div class="pb-4">
                <input type="submit" value="Modifier" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Annuler</a>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}