@using BlooDyWeb.Models.ViewModels
@model RoleVM

@{
    ViewData["Title"] = "Modifier Role";
}

<h1>Modifier Role</h1>

@* <h4>ExamenMedical</h4> *@
<hr />
<form asp-action="UpdateRole">
    <div class="container">
        <div class="row text-center">
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="row">
            <input asp-for="Role.Id" type="hidden" />
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="Role.Name" class="control-label"></label>
                    <input asp-for="Role.Name" class="form-control" />
                    <span asp-validation-for="Role.Name" class="text-danger"></span>
                </div>
            </div>


            <div class="pb-4">
                <input type="submit" value="Modifier" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Annuler</a>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}