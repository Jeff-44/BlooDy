@model Centre

@{
    ViewData["Title"] = "Modifier Centre";
}

<div class="container">
    <h1>Modifier Centre</h1>
    <hr />
    <form asp-action="ModifierCentre" method="post">
        <div class="row">
            <input type="hidden" asp-for="Id" name="name" value="" />
            <input type="hidden" asp-for="PersonneResponsableId" name="name" value="" />
            <input type="hidden" asp-for="VilleId" name="name" value="" />
            
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="NomCentre" class="control-label"></label>
                    <input asp-for="NomCentre" class="form-control" />
                    <span asp-validation-for="NomCentre" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-group">
                    <label asp-for="TypeCentre" class="control-label"></label>
                    <input asp-for="TypeCentre" class="form-control" />
                    <span asp-validation-for="TypeCentre" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Modifier" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-info text-white">Annuler</a>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
