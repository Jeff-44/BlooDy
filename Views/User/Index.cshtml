@using BlooDyWeb.Models.Security
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Utilisateurs";
}

<h1>Gestion Utilisateurs</h1>

<p>
    <a class="btn btn-danger float-end mb-3" asp-area="Identity" asp-page="/Account/Register">Nouveau +</a>
</p>
<table class="table table-hover">
    <thead class="bg-info text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lastname)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
               
                <td>
                    <a asp-action="EditUser" class="btn btn-outline-danger" asp-route-id="@item.Id">Modifier</a>
                    <a asp-action="UserDetails" class="btn btn-outline-info" asp-route-id="@item.Id">Details</a>
                    <form asp-action="DeleteUser" method="post" asp-route-id="@item.Id" class="d-inline-block">
                        <input type="submit" value="Supprimer" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        let table = new DataTable('.table');
    </script>
}