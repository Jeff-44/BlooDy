@model Don

@{
    ViewData["Title"] = "Nouveau Don";
}

<h1>Nouveau Don</h1>

@* <h4>ExamenMedical</h4> *@
<hr />
<form asp-action="AjouterDon">
    <div class="container">
        <div class="row text-center">
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="row">
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="DonateurId" class="control-label"></label>
                    <select asp-for="DonateurId" class="form-control" asp-items="ViewBag.DonateurList">
                        <option>--Selectionnez le Code du Donateur--</option>
                    </select>
                    <span asp-validation-for="DonateurId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="CollecteId" class="control-label"></label>
                    <select asp-for="CollecteId" class="form-control" asp-items="ViewBag.CollecteList">
                        <option>--Selectionnez le Code de la Collecte--</option>
                    </select>
                    <span asp-validation-for="CollecteId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group">
                    <label asp-for="Volume" class="control-label"></label>
                    <input asp-for="Volume" type="number" class="form-control" />
                    <span asp-validation-for="Volume" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-12 col-md-6 pb-4">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="TestePositifPourMaladie" /> @Html.DisplayNameFor(model => model.TestePositifPourMaladie)
                    </label>
                </div>
            </div>
            <div class="pb-4">
                <input type="submit" value="Ajouter" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-info">Annuler</a>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}