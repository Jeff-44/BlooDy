@model IEnumerable<BlooDyWeb.Models.TransfusionModule.Medecin>

@{
    ViewData["Title"] = "Medecins";
}

<h1>Liste des Medecins</h1>

<p>
    <a class="btn btn-danger float-end mb-3" asp-action="AjouterMedecin">Nouveau +</a>
</p>
<table class="table table-hover">
    <thead class="bg-info text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personne.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreeLe)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personne.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personne.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personne.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreeLe)
                </td>
                <td>
                    <a asp-action="ModifierMedecin" class="btn btn-outline-danger" asp-route-id="@item.Id">Modifier</a>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Details</a>
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        let table = new DataTable('.table');
    </script>
