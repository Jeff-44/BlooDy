@model IEnumerable<BlooDyWeb.Models.DistributionModule.Transport>

@{
    ViewData["Title"] = "Livraisons";
}

<h1>Liste des Livraisons</h1>

<p>
    <a class="btn btn-danger float-end mb-3" asp-action="AjouterLivraison">Nouveau + </a>
</p>
<table class="table table-hover">
    <thead class="bg-info text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDistribution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVehicule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModeTransport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chauffeur.Personne.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreeLe)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDistribution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroVehicule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModeTransport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreeLe)
                </td>
                <td>
                    <a asp-action="ModifierLivraison" class="btn btn-outline-danger" asp-route-id="@item.Id">Modifier</a>
                    <a asp-action="Details" class="btn btn-outline-info" asp-route-id="@item.Id">Details</a>
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        let table = new DataTable('.table');
    </script>
}